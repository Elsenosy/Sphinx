<launch>
 
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      
      <rosparam file="$(find sphinx_navigation)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find sphinx_navigation)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
      
      <rosparam file="$(find sphinx_navigation)/params/map_nav_params/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find sphinx_navigation)/params/map_nav_params/global_costmap_params.yaml" command="load" />
      
      <rosparam file="$(find sphinx_navigation)/params/base_local_planner_params.yaml" command="load" />
      <rosparam file="$(find sphinx_navigation)/params/move_base_params.yaml" command="load" />
      
      <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
      <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
      <remap from="cmd_vel" to="sphinx/sphinx_skid_steer_controller/cmd_vel" />
      <remap from="odom" to="odometry/filtered" />
      <remap from="odometry/filtered" to="sphinx/sphinx_skid_steer_controller/odom" />
    </node>
  
  </launch>